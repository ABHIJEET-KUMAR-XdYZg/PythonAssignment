   "source": [
    "# Program to find the sum of digits of a number until the sum is reduced to 1 digit "
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 13,
   "id": "96d58347",
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "Enter the number : 12345\n",
      "The sum is 6\n"
     ]
    }
   ],
   "source": [
    "def operation(n):\n",
    "    s=0\n",
    "    while(n!=0):\n",
    "        s+=n%10\n",
    "        n//=10\n",
    "    if(s>=10):\n",
    "        s=operation(s)\n",
    "    return s\n",
    "s=operation(int(input(\"Enter the number : \")))\n",
    "print(f\"The sum is {s}\")"
   ]
  }
